#% Do not delete the line below; configure depends on this
#  \DeclareLaTeXClass[designcon]{designcon}
# uspatent textclass definition file
# Article textclass definition file. Taken from initial LyX source code
# Author: Peter J. Pupalaikis <pete_pope@hotmail.com>
# Version: 1.0

Format 35
Input stdclass.inc

SecNumDepth             3
TocDepth                3

NoStyle Part
NoStyle Part*
NoStyle Chapter
NoCounter chapter
NoStyle Chapter*
NoStyle Section
NoStyle Subsection
NoStyle Subsubsection
NoStyle Paragraph
NoStyle Subparagraph
NoStyle Right_Address
NoStyle Date
NoStyle Address
NoStyle Abstract
NoStyle Author

Style Title
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             title
	ParSkip               0.4
	ItemSep               0
	TopSep                0
	BottomSep             1
	ParSep                1
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Largest
	EndFont
	HTMLTag               h1
	HTMLTitle             true
End


Style Author
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             author
	LabelSep              xxx
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Large
	EndFont
End


Style Section*
	CopyStyle	Section
	Category	Unnumbered
	Margin	Static
	LatexName	section*
	LabelType	No_Label
	LabelCounter	""
	OptionalArgs	0
	Font
	  	Size			Large
		Family		Sans
	EndFont

End


Style Subsection*
	CopyStyle	Subsection
	Category	Unnumbered
	Margin	Static
	LatexName	subsection*
	LabelType	No_Label
	LabelCounter	""
	OptionalArgs	0
	Font
	  	Size			Large
		Family		Sans
	EndFont
End

Style Heading
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             setHeading
	LabelSep              xxx
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 left
	LabelType             No_Label
	Font
	  	Size			Huge
		Series		Bold
		Family		Sans
	EndFont
End

Style AuthorInfo
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             setAuthorInfo
	LabelSep              xxx
	Align                 left
	LabelType             No_Label
	Font
	  Size                Large
	EndFont
End

Style Skip
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             setSkip
	LabelSep              xxx
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 left
	LabelType             No_Label
End

InsetLayout "Flex:Acronym"
	LyXType               custom
	Decoration            classic
	LabelString           Acronym
	ContentAsLabel        true
	LatexName             ac
	LatexType             command
	MultiPar              false
	CustomPars            false
	ForcePlain            true
	PassThru              true
	FreeSpacing           true
	ForceLTR              true
	HTMLIsBlock           false
End

Style	DesignConPaperStart
	Category			Section
	LatexType			command
	LatexName			designConPaperStart
	KeepEmpty			1
	LabelType			Static
	LabelString		"------- DesignCon Paper Start ------"
	Align				Right
	Font
		Series		Bold
		Shape			SmallCaps
		Color			Blue
	  	Size			Tiny
	EndFont
End




